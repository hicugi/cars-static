{
  "name": "cars-static",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:html start:styles",
    "start:html": "browser-sync start --server src --no-open --no-notify --no-ui --cwd src --files *.html,assets/**/*,mainassets/**/*",
    "start:styles": "npm-run-all styles:start styles:watcher",
    "styles:start": "node-sass ./src/scss -o ./src/assets/css --output-style compressed",
    "styles:watcher": "node-sass ./src/scss -wr -o ./src/assets/css --output-style compressed",
    "test": "editorconfig-checker",
    "build:clear": "rm -rf ./dist",
    "build:html": "html-minifier --remove-comments --collapse-whitespace --input-dir src --output-dir dist --file-ext html",
    "build:files": "cp -R ./src/assets ./dist/assets && cp -R ./src/mainassets ./dist/mainassets",
    "build": "npm-run-all build:clear build:html build:files",
    "deploy": "cd dist && rsync --archive --compress --delete . mag@webmaho.com:/var/www/chevrolet.webmaho.com/public_html"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "editorconfig-checker": "^3.1.0",
    "html-minifier": "^4.0.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {}
}
